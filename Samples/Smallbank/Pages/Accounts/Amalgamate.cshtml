@page
@model Smallbank.Pages.Accounts.AmalgamateModel

@{
    ViewData["Title"] = "Amalgamate";
    string StatusMessage = ViewData["StatusMessage"] as string;  
}

<h1>Amalgamate</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Amalgamate.CustomerId" />
            <div class="form-group">
               <label>Customer Name: </label> @Html.DisplayFor(model => model.Amalgamate.CustomerName)
            </div>
            <div class="form-group">
               <label>Current Checking Balance: </label>@Html.DisplayFor(model => model.Amalgamate.CheckingBalance)
            </div>
            <div class="form-group">
               <label>Current Savings Balance: </label>@Html.DisplayFor(model => model.Amalgamate.SavingsBalance)
            </div>
            <p/>
            <div>
                <label asp-for="Amalgamate.DestCustomerId" class="control-label"></label>
                <input asp-for="Amalgamate.DestCustomerId" class="form-control" />
                <span asp-validation-for="Amalgamate.DestCustomerId" class="text-danger"></span>
            </div>
            <p/>
            <div class="form-group">
                <input type="submit" value="Amalgamate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

 <p/>

  <p style="background-color:LightGrey;">@StatusMessage</p>
  
  <p/>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
